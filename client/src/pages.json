{
  "pages": [
    // 首页
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "首页",
        "app-plus": {
          // 取消iOS端软键盘上方横条
          "scrollIndicator": "none",
          "titleNView": {
            "searchInput": {
              "align": "center",
              "backgroundColor": "#f5f4f2",
              "borderRadius": "4px",
              // 原生导航栏上的搜索框禁止输入
              "disabled": true,
              "placeholder": "搜索帖子",
              "placeholderColor": "#6d6c67"
            },
            "buttons": [
              {
                "color": "#333333",
                "colorPressed": "#fd597c",
                "float": "right",
                "fontSize": "20px",
                "fontSrc": "/static/iconfont.ttf",
                "text": "\ue668",
                "width": "44px"
              }
            ]
          }
        }
      }
    },
    // 动态页
    {
      "path": "pages/news/news",
      "style": {
        // 启用自定义导航
        "navigationStyle": "custom"
      }
    },
    // 消息列表页
    {
      "path": "pages/msg/msg",
      "style": {
        // #ifdef MP
        "navigationStyle": "custom",
        // #endif
        "navigationBarTitleText": "消息",
        // 开启下来刷新
        "enablePullDownRefresh": true,
        "app-plus": {
          "titleNView": {
            "buttons": [
              {
                "color": "#333333",
                "colorPressed": "#fd597c",
                "float": "left",
                "fontSize": "20px",
                "fontSrc": "/static/iconfont.ttf",
                "text": "\ue611",
                "width": "44px"
              },
              {
                "color": "#333333",
                "colorPressed": "#fd597c",
                "float": "right",
                "fontSize": "20px",
                "fontSrc": "/static/iconfont.ttf",
                "text": "\ue649",
                "width": "44px"
              }
            ]
          }
        }
      }
    },
    // 个人中心
    {
      "path": "pages/mine/mine",
      "style": {
        "navigationBarTitleText": "个人中心",
        "app-plus": {
          "titleNView": {
            "buttons": [
              {
                "type": "menu"
              }
            ]
          }
        }
      }
    },
    // 搜索页
    {
      "path": "pages/search/search",
      "style": {
        "navigationBarTitleText": "搜索",
        "app-plus": {
          "softinputNavBar": "none",
          "titleNView": {
            "searchInput": {
              "align": "center",
              "backgroundColor": "#f5f4f2",
              "borderRadius": "4px",
              "placeholder": "输入搜索关键词",
              "placeholderColor": "#6d6c67"
            },
            "buttons": [
              {
                "color": "#333333",
                "colorPressed": "#fd597c",
                "float": "right",
                "fontSize": "15px",
                "text": "搜索",
                "width": "44px"
              }
            ]
          }
        }
      }
    },
    // 发帖页面
    {
      "path": "pages/add-posts/add-posts",
      "style": {
        "navigationStyle": "custom",
        "navigationBarTitleText": "发帖",
        "app-plus": {
          "animationType": "slide-in-left",
          "softinputNavBar": "none"
        }
      }
    },
    // 话题分类页
    {
      "path": "pages/topic-nav/topic-nav",
      "style": {
        "navigationBarTitleText": "话题分类"
      }
    },
    // 话题详情页
    {
      "path": "pages/topic-detail/topic-detail",
      "style": {
        "navigationBarTitleText": "话题详情",
        "app-plus": {
          "titleNView": {
            "type": "transparent",
            "buttons": [
              {
                "type": "menu"
              }
            ]
          }
        }
      }
    },
    // 好友列表页
    {
      "path": "pages/friend-list/friend-list",
      "style": {
        "navigationBarTitleText": "好友列表",
        "app-plus": {
          // 进入页面时的动画效果
          "animationType": "slide-in-left",
          "titleNView": {
            // 隐藏左侧返回按钮
            "autoBackButton": false,
            "searchInput": {
              "align": "center",
              "backgroundColor": "#f5f4f2",
              "borderRadius": "4px",
              "disabled": true,
              "placeholder": "搜索用户",
              "placeholderColor": "#6d6c67"
            },
            "buttons": [
              {
                "color": "#333333",
                "colorPressed": "#fd597c",
                "float": "right",
                "fontSize": "15px",
                "text": "搜索",
                "width": "44px"
              }
            ]
          }
        }
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "仿糗事百科",
    "navigationBarBackgroundColor": "#ffffff",
    "backgroundColor": "#ffffff"
  },
  "tabBar": {
    "color": "#333333",
    "selectedColor": "#fc5c82",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/index/index",
        "text": "首页",
        "iconPath": "static/tabbar/index.png",
        "selectedIconPath": "static/tabbar/index-selected.png"
      },
      {
        "pagePath": "pages/news/news",
        "text": "动态",
        "iconPath": "static/tabbar/news.png",
        "selectedIconPath": "static/tabbar/news-selected.png"
      },
      {
        "pagePath": "pages/msg/msg",
        "text": "消息",
        "iconPath": "static/tabbar/msg.png",
        "selectedIconPath": "static/tabbar/msg-selected.png"
      },
      {
        "pagePath": "pages/mine/mine",
        "text": "我的",
        "iconPath": "static/tabbar/mine.png",
        "selectedIconPath": "static/tabbar/mine-selected.png"
      }
    ]
  }
}
